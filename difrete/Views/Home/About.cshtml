@{
    ViewData["Title"] = "Sobre";
}

@{
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="py-xxl-10 pb-0" id="home">
    <a asp-controller="Home" asp-action="Index"><h5><i class="fas fa-arrow-left"></i> Voltar</h5><br></a>
    <br>
        <h2>Trabalho de Conclusão de curso</h2>
        <p>Sistemas de Informação</p>
    
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 col-xl-6 col-xxl-7 order-0 order-md-1 text-end">
                <img class="pt-7 pt-md-0 w-100"
                        src="~/assets/img/about.png" alt="hero-header" />
            </div>
            <div class="col-md-75 col-xl-6 col-xxl-5 text-md-start text-center py-8">
                <p class="fs-1 mb-5">Sistema desenvolvido para a conclusão do curso Sistemas de Informação na União das Faculdades dos Grandes Lagos de São José do Rio Preto-SP. <br /></p><a class="btn btn-primary me-2 btn-demo" data-toggle="modal" data-target="#myModal2" role="button">
                    Cadastrar<i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>

<section id="modal">
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <h3 class="fw-normal fs-6 fs-xxl-7">Conecte-se antes de solicitar um serviço</h3>
                    <p class="fs-1 mb-5">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s. <br /></p>
                    <div class="form-floating mb-3">
                        <input type="email" class="form-control" id="floatingInput">
                        <label for="floatingInput">Email</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword">
                        <label for="floatingPassword">Password</label>
                    </div><br>
                    <a href="#">Esqueci minha senha</a><br><br>
                    <center>
                        <button onclick="Login()" type="submit" id="btn-modal" class="btn btn-primary">Entrar</button><br><br>
                        <a href="#" aria-label="Close" data-dismiss="modal" data-toggle="modal" data-target="#myModal2">Ainda não tem uma conta? Cadastrar</a>
                    </center>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="modal">
    <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel2">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                </div>
                <div class="modal-body">
                    <h3 class="fw-normal fs-6 fs-xxl-7">Vamos realizar o cadastro? É simples  e fácil</h3>
                    <p class="fs-1 mb-5">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s. <br /></p>
                    <a class="ancora-modal" asp-controller="Home" asp-action="Fretista">Cadastrar-se como fretista</a><br>
                    <a class="ancora-modal" asp-controller="Home" asp-action="Contratante">Cadastrar-se como contratante</a>
                </div>
            </div>
        </div>
    </div>
</section>

