<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>@ViewData["Title"] - difrete</title>*@
    <title>@ViewData["Title"] - Difrete</title>

    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/reset.css" />

    <link rel='stylesheet' href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css'>

    <style>
        .modal-dialog {
            position: fixed;
            margin: auto;
            width: 3200px;
            height: 100%;
            right: 0px;
        }

        .modal-content {
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="container demo">
        <main class="main" id="top">
            <nav class="navbar navbar-expand-lg navbar-light fixed-top py-3 d-block" data-navbar-on-scroll="data-navbar-on-scroll">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/logo.png" height="45" alt="logo" /></a>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        @*<ul class="navbar-nav flex-grow-1">*@
                        <button class="navbar-toggler" type="submit" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"> </span>
                        </button>
                        <div class="collapse navbar-collapse border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
                            <ul class="navbar-nav ms-auto pt-2 pt-lg-0 font-base">
                                <li class="nav-item px-2"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                                <li class="nav-item px-2"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SAC">Perguntas frequentes</a></li>
                                <li class="nav-item px-2"><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">Sobre</a></li>
                                <li class="nav-item px-2">
                                    <button class="btn btn-link order-1 order-lg-0 ms-lg-3" data-toggle="modal" data-target="#myModal">Entrar</button>
                                    <button class="btn btn-demo btn-primary order-1 order-lg-0 ms-lg-3" data-toggle="modal" data-target="#myModal2">Cadastrar</button>
                                    @*<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Entrar</a>*@
                                </li>
                            </ul>
                        </div>
                        <div class="dropdown d-none d-lg-block">
                            <div class="dropdown-menu dropdown-menu-lg-end p-0 rounded" aria-labelledby="dropdownMenuButton1" style="top:55px">
                                <form>
                                    <input class="form-control border-200" type="search" placeholder="Search" aria-label="Search"
                                           style="background:#FDF1DF;" />
                                </form>
                            </div>
                        </div>
                       
                    </div>
                </div>
            </nav>

            <div class="container">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Sistema Desenvolvido para o Trabalho de Conclusão de Curso
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="~/js/api.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
